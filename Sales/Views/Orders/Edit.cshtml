@model Orders.Models.ViewModelOrder

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Редактирование заказа</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div>@Html.LabelFor(m => m.Status)</div>
                <div>
                    @Html.DropDownListFor(m => m.StatusId, new SelectList(Model.Statuses, "Id", "Name"), string.Empty, new { @style = "width:200px; padding:3px;" })
                    
                </div>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(m => m.Customer)</div>
                <div>@Html.EditorFor(m => m.Customer)</div>
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(m => m.Comment)</div>
                <div>@Html.EditorFor(m => m.Comment)</div>
            </div>
            <div class="form-group buttons-row">
                
                <input type="submit" value="Сохранить" class="btn btn-default tool-button" />
                <a asp-action="Index" class="tool-button">Возврат к списку заказов</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
